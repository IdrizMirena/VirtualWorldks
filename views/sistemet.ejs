<%- include('partials/header') %>
<style>
  :root {
    --primary-yellow: #ffc107;
    --light-yellow: #fff3cd;
    --dark-yellow: #ffb347;
    --shadow: 0 6px 16px rgba(0, 0, 0, 0.1);
    --transition: all 0.3s ease;
  }

  body {
    background-color: #f8f9fa;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  .dashboard-header {
    background: linear-gradient(135deg, #ffc107 0%, #ffb347 100%);
    color: white;
    padding: 3rem 0;
    margin-bottom: 3rem;
    border-radius: 0 0 2rem 2rem;
    box-shadow: var(--shadow);
  }

  .role-card {
    background: white;
    border-radius: 1.5rem;
    padding: 2rem;
    color: #212529;
    box-shadow: var(--shadow);
    height: 100%;
    transition: var(--transition);
    border: none;
    overflow: hidden;
    position: relative;
    z-index: 1;
  }

  .role-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 8px;
    background: linear-gradient(90deg, var(--primary-yellow), var(--dark-yellow));
    z-index: 2;
  }

  .role-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
  }

  .role-card .card-icon {
    font-size: 2.5rem;
    color: var(--primary-yellow);
    margin-bottom: 1rem;
  }

  .role-card .card-title {
    font-weight: 700;
    margin-bottom: 1rem;
    color: #343a40;
  }

  .role-card .card-date {
    color: #6c757d;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
  }

  .role-card .card-description {
    color: #495057;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .role-card .card-btn {
    background: linear-gradient(to right, var(--primary-yellow), var(--dark-yellow));
    border: none;
    color: #212529;
    font-weight: 600;
    padding: 0.5rem 1.5rem;
    border-radius: 50px;
    transition: var(--transition);
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .role-card .card-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    color: #212529;
  }

  .role-card .card-btn i {
    transition: var(--transition);
  }

  .role-card:hover .card-btn i {
    transform: translateX(3px);
  }

  .search-container {
    max-width: 800px;
    margin: 0 auto 3rem;
  }

  .search-input {
    border-radius: 50px;
    padding: 1rem 1.5rem;
    border: 2px solid #e9ecef;
    transition: var(--transition);
  }

  .search-input:focus {
    border-color: var(--primary-yellow);
    box-shadow: 0 0 0 0.25rem rgba(255, 193, 7, 0.25);
  }

  .category-filter {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .category-btn {
    background: white;
    border: 2px solid #e9ecef;
    color: #495057;
    padding: 0.5rem 1.5rem;
    border-radius: 50px;
    font-weight: 600;
    transition: var(--transition);
  }

  .category-btn:hover, .category-btn.active {
    background: var(--primary-yellow);
    border-color: var(--primary-yellow);
    color: #212529;
  }

  @media (max-width: 768px) {
    .dashboard-header {
      padding: 2rem 0;
      border-radius: 0 0 1rem 1rem;
    }
    
    .role-card {
      padding: 1.5rem;
    }
  }
</style>

